#version 330 core

layout(location = 0) in vec3 aPos;
layout(location = 1) in vec3 aCol;
layout(location = 2) in vec2 aTex;

out vec3 ourColor;
out vec2 TexCoord;

uniform float offsetX;

void main() {
	gl_Position = vec4(aPos.x + offsetX, aPos.y, aPos.z, 1.0f);
	ourColor = aCol;
	TexCoord = aTex;
}